@model VideoTutorials.Models.Video

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
	<hr />
            @Html.Raw(Model.Link)


    <p>@Html.DisplayNameFor(model => model.Description)</p>
    <p>@Html.DisplayFor(model => model.Description)</p>

    <p>@Html.DisplayNameFor(model => model.Categories)</p>
    <p>@Html.DisplayFor(model => model.Categories.Name)</p>

    <p>@Html.DisplayNameFor(model => model.Tags)</p>
    <p><div class="tags">
        @foreach (string tag in Model.Tags.Split(';'))
        {
            string tTag = tag.Trim();
            if (!string.IsNullOrWhiteSpace(tag))
            {
                <a href="~/Video/UserIndex?tag=@tTag" class="btn btn-warning btn-sm">@tTag</a>
            }
        }
    </div></p>
</div>
<p>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <button type="button" class="btn btn-primary btn-lg btn-block">@Html.ActionLink("Back to Video List", "UserIndex")</button>
        </div>
    </div>
</p>
